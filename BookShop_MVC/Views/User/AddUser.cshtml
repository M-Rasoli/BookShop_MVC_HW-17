@model BookShop_MVC.Application.DTOs.CreateUserDto
@{
    Layout = "_AdminLayout";
}

<div class="container d-flex align-items-center justify-content-center min-vh-100 mt-5">
    <div class="col-12 col-md-8 col-lg-6">
        <div class="card shadow-sm">
            <div class="card-body p-4">
                <h2 class="card-title mb-3 text-center">ثبت‌ نام</h2>

                <form asp-controller="User" asp-action="AddUser" method="post" enctype="multipart/form-data">
                    <div class="row g-3">
                        <div class="col-12 col-md-6">

                            <label asp-for="FirstName">نام</label>
                            <input type="text" class="form-control" asp-for="FirstName" placeholder="نام" required>

                        </div>

                        <div class="col-12 col-md-6">
                            <label asp-for="LastName">نام خانوادگی</label>
                            <input type="text" class="form-control" asp-for="LastName" placeholder="نام خانوادگی" required>

                        </div>

                        <div class="col-12 mb-3">
                            <label asp-for="UserName">نام کاربری</label>
                            <input type="text" class="form-control" asp-for="UserName" placeholder="ali20" required>
                        </div>

                        <div class="col-12 col-md-6 mb-5">
                            <label asp-for="Password">رمز عبور</label>
                            <input type="password" class="form-control" asp-for="Password" placeholder="رمز عبور" minlength="8" required>

                            <div class="form-text mt-1">حداقل ۸ کاراکتر.</div>
                        </div>

                        <div class="col-12 col-md-6">
                            <label for="confirmPassword">تکرار رمز عبور</label>
                            <input type="password" class="form-control" id="confirmPassword" placeholder="تکرار رمز" minlength="8" required>

                        </div>

                        <div class="form-group row">
                            <label class="col-md-3 label-control" asp-for="Role">نقش : </label>
                            <div class="col-md-9">

                                <select class="form-control" asp-for="Role">
                                    <option value="1">ادمین</option>
                                    <option value="2">مشتری</option>
                                </select>

                            </div>
                        </div>

                        <div class="col-12 d-grid">
                            <button class="btn btn-primary btn-lg" type="submit">ایجاد حساب</button>
                        </div>

                        <div class="d-grid mb-2">

                            <div style="color:red">@ViewBag.Error</div>

                        </div>
                        <div class="d-grid mb-2">

                            <div style="color:green">@ViewBag.Success</div>

                        </div>
                    </div>
                </form>

            </div>
        </div>
    </div>
</div>